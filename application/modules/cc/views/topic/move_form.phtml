<b><?php echo lang('move_topic'); ?></b>
<ul>
	<?php
	$from = $id_topic . '|' . $from_context;
	$i = 0;

	foreach ($contexts as $path => $info) {
		$i ++;

		$path_trunc = $path;
		if (strlen($path) > 13) {
			$path_trunc = substr($path, 0, 13) . '...';
		}

		$link = site_url("/cc/topic/move/{$from}|{$info['context']}");
		echo <<<PQR
<li><a href="{$link}" class="context" title="{$path}">{$info['title']}</a> <a href="{$link}" title="{$path}">[{$path_trunc}]</a></li>
PQR;
	}

	echo $i === 0 ? lang('no_contexts_move') : NULL;
	?>
</ul>